extends /main/layouts/genericblock

block title
    title peppermint

block postHead
    link(rel="stylesheet" type="text/css" href="/css/loginblock/style.css")

block content
    .d-flex.justify-content-center.align-items-center.h-100
        .centre-thing
            .logo.d-flex.align-items-center
                .logo-image(style="width: 84px;")
                h1 peppermint

            .login-thing
                h3 login

                form
                    .mb-2
                        label.form-label(for="username") username
                        input.form-control(type="text" id="username" placeholder="exampleusername")
                    .mb-0
                        label.form-label(for="password") password
                        input.form-control(type="password" id="password")