extends /main/layouts/genericblock

block title
    title peppermint - new account

block postHead
    link(rel="stylesheet" type="text/css" href="/css/loginblock/style.css")

block content
    .d-flex.justify-content-center.align-items-center.h-100
        .centre-thing
            .logo.d-flex.align-items-center.user-select-none
                .logo-image(style="width: 84px;")
                h1 peppermint

            .login-thing
                .d-flex.justify-content-between.w-100
                    h3 new account
                    small
                        a(href="/") login

                form(action="/newaccount" method="POST")
                    .mb-2
                        label.form-label(for="username") username
                        input.form-control(type="text" name="username" id="username" placeholder="exampleusername" autocomplete="off" value=req.query.username)
                    .mb-2
                        label.form-label(for="password") password
                        input.form-control(type="text" name="password" id="password" autocomplete="off")
                    .mt-3
                        button.btn.btn-primary.w-100(type="submit") create account
                    if (req.query.issue)
                        .mt-4(style="color: red;")= req.query.issue